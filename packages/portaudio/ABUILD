#!/bin/bash

function set_pkg_env
{
	PKG_NAME='portaudio'
	PKG_VERSION='2.0'

	PORTAUDIO_REPO="https://github.com/mojofunk/portaudio.git"
	PORTAUDIO_BRANCH='waf'
}

function prep ()
{
	cd $PKG_BUILD_DIR || exit 1

	if [ ! -d $PKG_NAME ]; then
		git clone $PORTAUDIO_REPO || exit 1
		cd $PKG_NAME
		git checkout $PORTAUDIO_BRANCH || exit 1
	fi
}

function configure ()
{
	./waf configure --platform=win32 --with-directx --with-wdmks --with-wasapi --with-tests --with-examples
}

function build ()
{
	./waf build $SMP_MAKEFLAGS
}

function install ()
{
	./waf install --destdir="$PKG_INSTALL_DIR"
}
