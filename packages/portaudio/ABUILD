#!/bin/bash

function set_pkg_env
{
	PKG_NAME='portaudio'
	PKG_VERSION='2.0'
	PKG_REPO="https://github.com/mojofunk/portaudio.git"
}

function configure ()
{
	./wafer ${PKG_VERBOSE_OPTION} configure --prefix=${PREFIX} --toolset=${TOOLSET} \
	                                        --enable-static --enable-shared \
	                                        --with-directx --with-wdmks --with-wasapi \
	                                        --with-tests --with-examples
}

function build ()
{
	./wafer ${PKG_VERBOSE_OPTION} build $SMP_MAKEFLAGS
}

function install ()
{
	./wafer ${PKG_VERBOSE_OPTION} install --destdir="$PKG_INSTALL_DIR"
}
