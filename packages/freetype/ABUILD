#!/bin/bash

function set_pkg_env
{
	PKG_NAME="freetype"
	PKG_VERSION="2.5.5"

	PKG_SRC_DIR="${PKG_NAME}-${PKG_VERSION}"
	PKG_SRC_FILE="${PKG_SRC_DIR}.tar.gz"
	PKG_SRC_URL="https://download.savannah.gnu.org/releases/freetype/${PKG_SRC_FILE}"

	#PKG_DEPS="zlib libpng harfbuzz"

	PKG_BUILD_TOOL="autotools"
}
