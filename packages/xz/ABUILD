#!/bin/bash

function set_pkg_env
{
	PKG_NAME="xz"
	PKG_VERSION="5.2.2"

	# define this as a default unless overridden
	PKG_SRC_DIR="${PKG_NAME}-${PKG_VERSION}"
	PKG_SRC="${PKG_SRC_DIR}.tar.bz2"
	PKG_URL="http://tukaani.org/xz/${PKG_SRC}"

	PKG_BUILD_TOOL='autotools'
}

function prep {
	download_source_and_unpack
}

function configure {
	cd "$PKG_BUILD_ROOT_DIR/$PKG_NAME" || exit 1
	autotools_configure
}

function build {
	cd "$PKG_BUILD_ROOT_DIR/$PKG_NAME" || exit 1
	autotools_build
}

function install {
	cd "$PKG_BUILD_ROOT_DIR/$PKG_NAME" || exit 1
	autotools_install
}
