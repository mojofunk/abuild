#!/bin/bash

function set_pkg_env
{
	PKG_NAME="libpng"
	PKG_VERSION="1.6.34"

	PKG_SRC_DIR="${PKG_NAME}-${PKG_VERSION}"
	PKG_SRC_FILE="${PKG_SRC_DIR}.tar.xz"
	PKG_SRC_URL="https://downloads.sourceforge.net/project/libpng/libpng16/${PKG_VERSION}/${PKG_SRC_FILE}"

	PKG_DEPS="zlib"

	PKG_BUILD_TOOL="autotools"
}
