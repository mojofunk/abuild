#!/bin/bash

function set_pkg_env
{
	PKG_NAME='cppunit'
	PKG_VERSION='1.13.0'
	PKG_REPO="https://github.com/mojofunk/cppunit.git"

	PKG_BUILD_TOOL='waf'
}

function install {
	cd "$PKG_BUILD_DIR" || exit 1

	waf_install

	mkdir -p "$PKG_BIN_DIR" || exit 1

	# Only relevant with msvc build
	mv "$PKG_LIB_DIR"/cppunit*.dll $PKG_BIN_DIR
}
