#!/bin/bash

function set_pkg_env
{
	PKG_NAME='cppunit'
	PKG_VERSION='0.1.13'
	PKG_REPO="https://github.com/mojofunk/cppunit.git"
}

function configure ()
{
	if [ $TOOLSET == 'msvc' ]; then
	 ./waf configure --prefix='C:/' --toolset msvc --enable-static
	else
		echo "$PKG_NAME: Unsupported toolset"
		exit 1
	fi
}

function build ()
{
	./waf build -j1
}

function install ()
{
	./waf	install --destdir="$PKG_INSTALL_DIR"
}
