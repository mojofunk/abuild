#!/bin/bash

function set_pkg_env
{
	PKG_NAME='libsndfile'
	PKG_VERSION='1.2.8'
	PKG_REPO="https://github.com/mojofunk/libsndfile.git"

	PKG_BUILD_TOOL='wafer'
}

function configure ()
{
	#change_to_package_build_dir ?
	cd "$PKG_BUILD_ROOT_DIR/$PKG_NAME" || exit 1

	WAFER_ARGS="--enable-static --enable-shared \
	            --with-directx --with-wdmks --with-wasapi \
	            --with-tests --with-examples"

	wafer_configure
}
